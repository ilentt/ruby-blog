<p class="notice"><%= notice %></p>
<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= @mardown.render(article.body).html_safe %></td>
        <td><%= time_ago_in_words(article.created_at) %></td>
        <td><%= link_to 'Show', article %></td>
        <!-- <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: "Are you sure want to delete the article \"#{article.title}\"?" } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

---

<div class="container">
  <p class="notice"><%= notice %></p>
  <h1>Articles</h1>
  <div class="row">
    <!-- <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12"> -->
    <div class="col-md-12">    
      <% @articles.each do |article| %>
        <article>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <figure>
                        <img src="http://usbcode.ir/wp-content/uploads/2017/03/bootstrap.jpg">
                    </figure>
                </div>
                <div class="col-sm-6 col-md-8">
                    <span class="label label-default pull-right"><i class="glyphicon glyphicon-comment"></i>50</span>
                    <h3><%= article.title %></h3>
                    <p><%= @mardown.render(article.body).html_safe %></p>
                    <section>
                        <i class="glyphicon glyphicon-folder-open"></i>Bootstrap
                        <i class="glyphicon glyphicon-user"></i>RaymondDragon
                        <i class="glyphicon glyphicon-calendar"></i><%= time_ago_in_words(article.created_at) %>
                        <i class="glyphicon glyphicon-eye-open"></i>10000
                        <%= link_to 'Read more...', article, class: "btn btn-default btn-sm pull-right" %>
                        <!-- <a href="#" class="btn btn-default btn-sm pull-right">More ... </a> -->
                    </section>
                </div>
            </div>
        </article>
      <% end %>
    </div>
  </div>
</div>
